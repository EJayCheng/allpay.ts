{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": false,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "baseUrl": "src",
    "target": "es6",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es6", "es7"]
  },
  "include": ["src/**/*.ts", "test/**/*.spec.ts"],
  "exclude": ["test.ts"]
}
